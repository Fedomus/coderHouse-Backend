<div class="container">
      <h1>Vista de productos</h1>
      {{#if productos}}
            <table class="table">
                  <thead>
                        <tr>
                              <th scope="col">Nombre</th>
                              <th scope="col">Precio</th>
                              <th scope="col">Img</th>
                        </tr>
                  </thead>
                  <tbody>
                        {{#each productos}}
                        <tr>
                              <td>{{this.nombre}}</td>
                              <td>${{this.precio}}</td>
                              <td><img src={{this.thumbnail}}></td>
                        </tr>
                        {{/each}}
                  </tbody>
            </table>  
      {{else}}
            <h3 style="color: red;">No hay productos</h3>
      {{/if}}
      <a href="/"><button>Agregar Producto</button></a>
</div>
{{> footer }}
